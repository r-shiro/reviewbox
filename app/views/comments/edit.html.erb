<div class="posts-comment-name">
    <%= @post.name %>
    <% if @post.subname %>
      <%= @post.subname %>
    <% end %>
</div>
    <div class="posts-comment-genre">
      <span>ジャンル:</span><%= @post.genre %>
    </div>


<div class="posts-comment-rating">
    <%= form_tag("/comments/#{@post.id}/update",method: :post) do %>

    <p>5段階評価<br>
        <select size="1" name="rating">
          <option value="5.0">5.0</option>
          <option value="4.5">4.5</option>
          <option value="4.0">4.0</option>
          <option value="3.5">3.5</option>
          <option value="3.0">3.0</option>
          <option value="2.5">2.5</option>
          <option value="2.0">2.0</option>
          <option value="1.5">1.5</option>
          <option value="1.0">1.0</option>
          <option value="0.5">0.5</option>
        </select>
    </p>
    
    <p>コメント</p>
    <textarea name="comment"><%= @comment.comment %></textarea>
    <input type="submit" value="コメントまたは評価を変更する">

    <% end %>
</div>